---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: string;
}

const { title, description, image, canonical, type = 'website' } = Astro.props;

const defaultDescription = 'خدمة سطحة جدة أبو فهد - نقل المركبات والشاحنات بأمان وسرعة في جدة والمناطق المجاورة. خدمة 24 ساعة مع فريق محترف ومعدات حديثة. ☎️ 0551606144';
const defaultImage = '/og-image.jpg';

const siteTitle = 'سطحة جدة أبو فهد';
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;

const canonicalURL = canonical || Astro.url.href;
const imageURL = new URL(image || defaultImage, Astro.site).href;
const desc = description || defaultDescription;

// Geo and business information
const businessName = 'سطحة جدة أبو فهد';
const phone = '+966551606144';
const city = 'جدة';
const country = 'السعودية';
const countryCode = 'SA';
const latitude = '21.489217';
const longitude = '39.156783';
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={desc} />
<meta name="keywords" content="سطحة جدة, نقل مركبات, خدمة سطحة, أبو فهد, سحب سيارات جدة, نقل شاحنات, خدمة طوارئ, سطحة 24 ساعة, فتح أبواب مغلقة, تغيير إطارات, نقل بين المدن" />
<meta name="author" content="سطحة جدة أبو فهد" />
<meta name="robots" content="index, follow" />
<meta name="language" content="ar-SA" />

<!-- Geo Tags -->
<meta name="geo.region" content={countryCode + '-' + city} />
<meta name="geo.placename" content={city + ', ' + country} />
<meta name="geo.position" content={latitude + ';' + longitude} />
<meta name="ICBM" content={latitude + ', ' + longitude} />

<!-- Business Information -->
<meta name="business:contact_data:phone_number" content={phone} />
<meta name="business:contact_data:locality" content={city} />
<meta name="business:contact_data:country_name" content={country} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={desc} />
<meta property="og:image" content={imageURL} />
<meta property="og:image:alt" content={fullTitle} />
<meta property="og:locale" content="ar_SA" />
<meta property="og:site_name" content={siteTitle} />
<meta property="og:phone_number" content={phone} />

<!-- Business Open Graph -->
<meta property="business:contact_data:street_address" content={city} />
<meta property="business:contact_data:locality" content={city} />
<meta property="business:contact_data:country_name" content={country} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={desc} />
<meta property="twitter:image" content={imageURL} />
<meta property="twitter:image:alt" content={fullTitle} />

<!-- Mobile & Device Tags -->
<meta name="format-detection" content="telephone=yes" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />
<meta name="apple-mobile-web-app-title" content={siteTitle} />
<meta name="theme-color" content="#0ea5e9" />
<meta name="msapplication-TileColor" content="#0ea5e9" />

<!-- Performance & Loading -->
<meta name="referrer" content="origin-when-cross-origin" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />

